                    Grid.ColumnSpan="3"
                    Content="View Unread Messages"
                    x:Name="DropDownToBottomButton"
                    Visibility="Collapsed"
                    VerticalAlignment="Bottom"
                    Click="DropDownToBottomButton_Click"/>


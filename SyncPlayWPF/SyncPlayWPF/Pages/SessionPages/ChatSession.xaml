<UserControl x:Class="SyncPlayWPF.Pages.SessionPages.ChatSession"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SyncPlayWPF.Pages.SessionPages"
             xmlns:custom="clr-namespace:SyncPlayWPF.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="600">
    <UserControl.Resources>
        <ResourceDictionary Source="../../Themes/Generic.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>
        
        <!-- Chat Messages -->
        <ScrollViewer Style="{StaticResource FavsScrollViewer}">
            <StackPanel Grid.Row="0" Margin="20,10,10,10">
                <custom:ChatMessage 
                MessageContent="I use arch. Also Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc pharetra nisi nibh, nec ultricies dui placerat vel. Mauris sodales mollis est sed elementum. Pellentesque odio massa, pulvinar dictum semper eget, dignissim non velit. Nulla id sem vitae eros scelerisque dictum. Ut dictum dui in sagittis sodales. Pellentesque tincidunt diam eget lorem lacinia, sodales iaculis est aliquet. Aliquam erat volutpat. Donec a dui risus. Donec luctus volutpat eleifend. Nullam posuere gravida ipsum id rhoncus. Morbi faucibus at ex sit amet sodales."
                MessageSender="Jimbo"
                MessageTime="5:30 PM"
                Style="{StaticResource IncomingMessage}"/>
                <custom:ChatMessage
                MessageContent="Jim, I have no idea what you're talking about. Like for reals, I have no idea"
                MessageSender="Sammy"
                MessageTime="5:32 PM"
                Style="{StaticResource OutgoingMessage}"/>
                <custom:ChatMessage 
                MessageContent="I'm just saying that Im using Arch. Nothing else."
                MessageSender="Jimbo"
                MessageTime="5:30 PM"
                Style="{StaticResource IncomingMessage}"/>
                <custom:ChatMessage
                MessageContent="No one cares, jim."
                MessageSender="Sammy"
                MessageTime="5:32 PM"
                Style="{StaticResource OutgoingMessage}"/>
                <custom:ChatMessage
                MessageContent="Literally no one"
                MessageSender="Sammy"
                MessageTime="5:32 PM"
                IsInitialMessage="False"
                Style="{StaticResource OutgoingMessage}"/>
                <custom:ChatMessage 
                MessageContent="I hate you"
                MessageSender="Jimbo"
                MessageTime="5:30 PM"
                Style="{StaticResource IncomingMessage}"/>
                <custom:ChatMessage
                MessageContent="Hate you too bud"
                MessageSender="Sammy"
                MessageTime="5:32 PM"
                IsInitialMessage="True"
                Style="{StaticResource OutgoingMessage}"/>
                <custom:ChatMessage 
                MessageContent="Okay sam, What operating system do you use?"
                MessageSender="Jimbo"
                MessageTime="5:30 PM"
                Style="{StaticResource IncomingMessage}"/>
                <custom:ChatMessage
                MessageContent="Windows"
                MessageSender="Sammy"
                MessageTime="5:32 PM"
                IsInitialMessage="True"
                Style="{StaticResource OutgoingMessage}"/>
                <custom:ChatMessage
                MessageContent="Why?"
                MessageSender="Sammy"
                MessageTime="5:32 PM"
                IsInitialMessage="False"
                Style="{StaticResource OutgoingMessage}"/>
                <custom:ChatMessage 
                MessageContent="Windows... That explains a lot. Explains so, so much."
                MessageSender="Jimbo"
                MessageTime="5:30 PM"
                Style="{StaticResource IncomingMessage}"/>
            </StackPanel>
        </ScrollViewer>

        <Border
            Background="{StaticResource DarkMode_AccentColorI}"
            Grid.Row="1"
            Margin="10,0,10,10"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.5" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
               
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <custom:PromptingLabel 
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Style="{StaticResource ChatPromptLabel}"
                    PromptingText="Enter Message Here"/>


                <custom:ImageButton
                    Grid.Column="1"
                    ImageBackgroundHoverBrush="{StaticResource DarkMode_ContrastedGradient}"
                    Image="{StaticResource GifButton}"
                    Style="{StaticResource ImageSilhouette}"/>
                
                <custom:ImageButton
                    Grid.Column="2"
                    ImageBackgroundHoverBrush="{StaticResource DarkMode_ContrastedGradient}"
                    Image="{StaticResource SendButton}"
                    Style="{StaticResource ImageSilhouette}"/>
            </Grid>
        </Border>
        
    </Grid>
</UserControl>
